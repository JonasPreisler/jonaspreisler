<p id="notice"><%= notice %></p>

<h1>Link To Shortens</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Color</th>
      <th>Size</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @link_to_shortens.each do |link_to_shorten| %>
      <tr>
        <td><%= link_to_shorten.product_id %></td>
        <td><%= link_to_shorten.color %></td>
        <td><%= link_to_shorten.size %></td>
        <td><%= link_to_shorten.amount %></td>
        <td><%= link_to 'Show', link_to_shorten %></td>
        <td><%= link_to 'Edit', edit_link_to_shorten_path(link_to_shorten) %></td>
        <td><%= link_to 'Destroy', link_to_shorten, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link To Shorten', new_link_to_shorten_path %>
